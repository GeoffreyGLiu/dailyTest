<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <Button
        android:id="@+id/btn_public_storage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="公共存储"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_android_q"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_android_q"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="androidQ文件保存读取"
        app:layout_constraintLeft_toRightOf="@+id/btn_public_storage"
        app:layout_constraintRight_toLeftOf="@+id/btn_empty2"
        app:layout_constraintTop_toTopOf="@+id/btn_public_storage" />

    <Button
        android:id="@+id/btn_empty2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="广告位招租2"
        app:layout_constraintLeft_toRightOf="@+id/btn_android_q"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_public_storage" />

    <FrameLayout
        android:id="@+id/fl_container_storage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_public_storage" />

</androidx.constraintlayout.widget.ConstraintLayout>